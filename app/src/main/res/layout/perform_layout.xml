<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="360dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="@string/appTitle"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:background="@android:color/holo_red_dark"
                android:paddingTop="10dp" />

            <TableRow
                android:background="#000000"
                android:paddingTop="4dp" />


        </TableLayout>

    </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/TableLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0sp"
                android:stretchColumns="0,1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/workoutnameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:background="@android:color/white"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:background="@android:color/darker_gray"
                    android:paddingTop="4dp" />

                <TableRow
                    android:background="@android:color/white"
                    android:paddingTop="20dp" />


            </TableLayout>

            <TableLayout
                android:id="@+id/TableLayout02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="0sp"
                android:stretchColumns="0,1,2,3">
            </TableLayout>


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="0sp"
                android:stretchColumns="0,1">

                <TableRow
                    android:id="@+id/AddRow"
                    android:layout_height="100dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:foregroundGravity="left"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imageplaceholder" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/exercisenameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:background="@android:color/white"
                        android:gravity="left"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="20sp"
                        android:text = "yes"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/exerciseprogressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/white"
                        android:gravity="right"
                        android:text="yes"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="20sp"
                        android:textStyle="bold" />



                </TableRow>
                <TableRow
                    android:background="@android:color/darker_gray"
                    android:paddingTop="4dp" />


            </TableLayout>



        </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:indeterminate="false"
        android:longClickable="true"
        android:scrollbarSize="8dp"
        />



    <TableRow
        android:layout_height="169dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/nextTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#99e600"
            android:gravity="center"
            android:onClick="nextExercise"
            android:padding="18dp"
            android:text="        Next        "

            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/nextBtn"
            android:layout_width="60dp"
            android:layout_height="63dp"
            android:background="#99e600"
            android:foregroundGravity="center"
            android:onClick="nextExercise"
            android:padding="40dp"
            android:paddingLeft="60dp"
            android:rotation="180"
            android:scaleType="centerCrop"
            android:src="@drawable/backspace"
            android:tint="@android:color/white" />





    </TableRow>

    <TableRow
        android:layout_height="169dp"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="12dp">


        <ImageView
            android:id="@+id/previousBtn"
            android:layout_width="60dp"
            android:layout_height="63dp"
            android:background="#ffd500"
            android:foregroundGravity="center"
            android:onClick="previousExercise"
            android:padding="40dp"
            android:paddingLeft="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/backspace"
            android:tint="@android:color/white" />


        <TextView
            android:id="@+id/previousTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffd500"
            android:gravity="center"
            android:onClick="previousExercise"
            android:padding="18dp"
            android:text="    Previous      "

            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </TableRow>


    <TableRow
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@android:color/black"
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="0dp">


        <ImageView
            android:id="@+id/cancelBtn"
            android:layout_width="60dp"
            android:layout_height="63dp"
            android:background="@android:color/holo_red_dark"
            android:foregroundGravity="center"
            android:onClick="returnToMain"
            android:padding="40dp"
            android:paddingLeft="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/clear"
            android:tint="@android:color/white" />


        <TextView
            android:id="@+id/cancelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:onClick="returnToMain"
            android:padding="18dp"
            android:text="Stop Workout "
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </TableRow>



</TableLayout>